-- Create a ScreenGui to hold the UI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "IntroScreenGui"
screenGui.Parent = game:GetService("CoreGui")

-- Create the Intro Label
local introLabel = Instance.new("TextLabel")
introLabel.Name = "IntroLabel"
introLabel.Parent = screenGui
introLabel.Text = "BETLESS HUB BUT BETTER"
introLabel.Size = UDim2.new(0, 400, 0, 100)
introLabel.Position = UDim2.new(0.5, -200, 0.5, -50)  -- Centered on screen
introLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
introLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
introLabel.TextSize = 40
introLabel.Font = Enum.Font.GothamBold
introLabel.TextStrokeTransparency = 0.8
introLabel.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)

-- Add a UI Corner for rounded edges
local corner = Instance.new("UICorner")
corner.Parent = introLabel
corner.CornerRadius = UDim.new(0, 20)

-- Add a stylish gradient background
local gradient = Instance.new("UIGradient")
gradient.Parent = introLabel
gradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 0, 0)), -- Red
    ColorSequenceKeypoint.new(0.5, Color3.fromRGB(0, 255, 0)), -- Green
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 0, 255)) -- Blue
}
gradient.Rotation = 45

-- Fade out the intro after 3 seconds and execute the script
wait(3)

-- Destroy the Intro Label with a fade-out effect
for i = 1, 10 do
    introLabel.TextTransparency = i * 0.1
    wait(0.1)
end
introLabel:Destroy()

-- Execute the main script

