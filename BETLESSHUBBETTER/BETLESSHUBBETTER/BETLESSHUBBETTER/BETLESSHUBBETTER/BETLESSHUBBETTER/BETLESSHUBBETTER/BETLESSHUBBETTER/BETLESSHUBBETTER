-- Create a ScreenGui to hold the button
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "StylishButtonUI"
screenGui.Parent = game:GetService("CoreGui")

-- Create the Button
local stylishButton = Instance.new("TextButton")
stylishButton.Name = "StylishButton"
stylishButton.Parent = screenGui
stylishButton.Text = "Betless Hub Another Version"
stylishButton.Size = UDim2.new(0, 200, 0, 50)
stylishButton.Position = UDim2.new(0, 10, 0, 10)  -- Move to top-left corner
stylishButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
stylishButton.TextColor3 = Color3.fromRGB(255, 255, 255)
stylishButton.TextSize = 20
stylishButton.Font = Enum.Font.GothamBold
stylishButton.BorderSizePixel = 0

-- Add a UI Corner for rounded edges
local corner = Instance.new("UICorner")
corner.Parent = stylishButton
corner.CornerRadius = UDim.new(0, 12)

-- Add a stylish gradient background
local gradient = Instance.new("UIGradient")
gradient.Parent = stylishButton
gradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 0, 0)), -- Red
    ColorSequenceKeypoint.new(0.5, Color3.fromRGB(0, 255, 0)), -- Green
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 0, 255)) -- Blue
}
gradient.Rotation = 45

-- Add a hover effect
stylishButton.MouseEnter:Connect(function()
    stylishButton.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
end)
stylishButton.MouseLeave:Connect(function()
    stylishButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
end)

-- Script to execute on button click
stylishButton.MouseButton1Click:Connect(function()
    -- Toggle the library UI
    Library:ToggleUI()
end)
